<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Final_LabIV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Final_LabIV.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gestor de Tareas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tareas" asp-action="Index">Tareas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DetalleTareas" asp-action="Index">Detalles de Tarea</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Estados" asp-action="Index">Estados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Prioridades" asp-action="Index">Prioridades</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Proyecto_Final_LabIV - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/preview.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
        body {
            background-color: #f8f9fa; /* Fondo gris claro */
        }

        .navbar {
            background-color: #007bff; /* Azul */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important; /* Texto blanco */
        }

        .navbar-brand:hover, .nav-link:hover {
            color: black !important; /* Texto blanco al pasar el ratón */
        }

        footer {
            background-color: #343a40; /* Gris oscuro */
            color: #868e96; /* Texto gris */
            padding: 10px 0;
        }

        footer a {
            color: #adb5bd; /* Enlaces gris claro */
        }

        footer a:hover {
            color: #ffffff; /* Enlaces blanco al pasar el ratón */
        }

        .card {
            background-color: #ffffff; /* Fondo blanco para las tarjetas */
            border: 1px solid #ced4da; /* Borde gris claro */
            border-radius: 0.25rem;
        }

        .btn-success {
            background-color: #28a745; /* Verde para los botones de éxito */
            border-color: #28a745; /* Borde verde */
        }

        .btn-success:hover {
            background-color: #218838; /* Verde más oscuro al pasar el ratón */
            border-color: #1e7e34; /* Borde verde más oscuro */
        }
    </style>
